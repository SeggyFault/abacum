mixin button(type, text)
  if type == 'primary'
    a(href="#", class="hover:bg-blue-500 focus:bg-blue-300").block.px-3.py-2.text-sm.text-center.text-white.font-bold.bg-blue-300.border.border-blue-300.rounded-lg 
      | #{text}
  else if type == 'secondary'
    a(href="#", class="hover:border-blue-500 focus:border-blue-300 hover:text-blue-500 focus:text-blue-300").block.px-3.py-2.text-sm.text-center.text-blue-300.font-bold.bg-transparent.border.border-blue-300.rounded-lg 
      | #{text}
  else if type == 'tertiary'
    a(href="#", class="w-full hover:bg-gold-100 focus:bg-gold-200 md:w-fit").block.px-3.py-3.text-sm.text-center.text-black.font-bold.bg-gold-200.border.border-gold-200.rounded-lg 
      | #{text}